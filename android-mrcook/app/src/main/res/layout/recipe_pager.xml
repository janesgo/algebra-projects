<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/ivPagerRecipe"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:scr="@drawable/splash_logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:text="Title"/>
            <ImageView
                android:id="@+id/ivFavourite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                tools:src="@drawable/baseline_favorite_border_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvPagerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recipe title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:text="Category"/>

            <TextView
                android:id="@+id/tvPagerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:text="Recipe category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:text="Area"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tvPagerArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:text="Recipe area" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:text="Ingredients"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvPagerIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Recipe ingredients" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:text="Instructions"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvPagerInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>