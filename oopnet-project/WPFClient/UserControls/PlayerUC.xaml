<UserControl x:Class="WPFClient.UserControls.PlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="45"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Ellipse Grid.Row="0" Width="25" Height="25"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 StrokeThickness="1" Stroke="DarkSlateBlue">
                <Ellipse.Fill>
                    <ImageBrush x:Name="playerPicture" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="playerInfo" Grid.Row="1" FontSize="9" HorizontalAlignment="Center" />
            <TextBlock x:Name="playerInfoNumber" Grid.Row="2" FontSize="9" HorizontalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
